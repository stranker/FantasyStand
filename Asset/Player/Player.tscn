resource_name = "Player.gd"
script/source = "extends KinematicBody2D

var velocity = Vector2()
var speed = 100
var currentWeapon = null
var weaponList = []
var bow = preload(\"res://Asset/Weapons/Range/Bow.tscn\")
var sword = preload(\"res://Asset/Weapons/Melee/Sword.tscn\")


func _ready():
	set_physics_process(true)
	var b = bow.instance()
	var s = sword.instance()
	weaponList.append(b)
	weaponList.append(s)
	$WPos.add_child(b)
	$WPos.add_child(s)
	s.hide()
	currentWeapon = $WPos.get_child(0)
	Global.player = self
	if OS.get_name() != \"Windows\":
		$CanvasLayer/ControlAnalogico.hide()
	pass

func switch_weapon():
	for i in weaponList:
		if i.is_visible_in_tree():
			i.hide()
		else:
			i.show()
			currentWeapon = i
	pass

func _process(delta):
	if Input.is_action_pressed(\"Shoot\"):
		attack()
	if Input.is_action_just_pressed(\"SwitchWeapon\"):
		switch_weapon()
	pass

func attack():
	if(currentWeapon):
		currentWeapon.attack()
	pass

func _physics_process(delta):
	movement(delta)
	pass

func movement(delta):
	velocity = Vector2()
#	#if Input.is_action_pressed(\"ui_up\"):
#		velocity.y += -1
#	elif Input.is_action_pressed(\"ui_down\"):
#		velocity.y += 1
#	if Input.is_action_pressed(\"ui_right\"):
#		velocity.x = +1
#	elif Input.is_action_pressed(\"ui_left\"):
#		velocity.x += -1
	velocity.x = $CanvasLayer/ControlAnalogico.fuerza.x
	velocity.y = -$CanvasLayer/ControlAnalogico.fuerza.y
	velocity = velocity.normalized()
	move_and_slide(velocity * speed)
	pass
