var sword = preload(\"res://Asset/Items/Melee/Sword.tscn\")
var alive = true

func _ready():
	set_physics_process(true)
	if OS.get_name() == \"Windows\":
		$CanvasLayer/ControlAnalogico.hide()
	update_stats_weapons()
	pass

func update_stats_weapons():
#	for i in weaponList:
#		i.update_stats(strength,agility,luck)
	pass

func switch_weapon():
	for i in weaponList:
		if i.is_visible_in_tree():
			i.hide()
		else:
			i.show()
			currentWeapon = i
	pass

func _process(delta):
	if Input.is_action_pressed(\"Shoot\"):
		attack()
	if Input.is_action_just_pressed(\"SwitchWeapon\"):
		switch_weapon()
	pass

func attack():
	if(currentWeapon):
		currentWeapon.attack()
	pass

func _physics_process(delta):
	movement(delta)
	pass

func movement(delta):
	velocity = Vector2()
	if OS.get_name() == \"Windows\":
		if Input.is_action_pressed(\"ui_up\"):
			velocity.y += -speed
		elif Input.is_action_pressed(\"ui_down\"):
			velocity.y += speed
		if Input.is_action_pressed(\"ui_right\"):
			velocity.x += speed
		elif Input.is_action_pressed(\"ui_left\"):
			velocity.x += -speed
	else:
		velocity.x = $CanvasLayer/ControlAnalogico.fuerza.x
		velocity.y = -$CanvasLayer/ControlAnalogico.fuerza.y
	velocity = velocity.normalized()
	move_and_slide(velocity * Global.player.speed)
	pass


