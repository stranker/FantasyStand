resource_name = "UpgradeScene.gd"
script/source = "extends Control


var repairPoints
var nextWallLevel

func _ready():
	initialize()
	set_labels()
	pass

func initialize():
	repairPoints = Global.wallMaxLife/10
	nextWallLevel = Global.wallLevel + 1
	pass

func set_labels():
	$MC/CC/C/Gold.text = \"GOLD \" + str(Global.gold)
	$MC/CC/C/StatPoints.text = \"STAT POINTS: \"+ str(Global.pointToSpend)
	$MC/CC/C/Wall/HP.text = str(Global.wallLife) + \"/\" + str(Global.wallMaxLife)
	$MC/CC/C/Wall/RepairInfo.text = \"Repair \" + str(repairPoints) + \" HP\"
	$MC/CC/C/Wall/UpgradeInfo.text = \"Upgrade to lvl \" + str(nextWallLevel)
	pass

func _on_Upgrade_button_down():
	pass # replace with function body

func _on_Repair_button_down():
	#Global.wall.repair(repairPoints)
	Global.wallLife += repairPoints
	set_labels()
	pass # replace with function body

func _on_WeaponSearch_button_down():
	pass # replace with function body

func _on_CompanionSearch_button_down():
	pass # replace with function body
