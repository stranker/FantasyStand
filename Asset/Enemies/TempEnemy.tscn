func _ready():
	create_temp_enemy()
	$LifeBar.max_value = life
	$LifeBar.value = life
	velocity.x = -1
	velocity.y = rand_range(-0.5,0.5)
	velocity = velocity.normalized()
	$DamageArea.add_to_group(\"Enemy\")
	pass

func create_temp_enemy():
	create_enemy(50,5,1,25)
	pass

func _physics_process(delta):
	state_machine(delta)
	pass

func movement(delta):
	if currentState == STATES.WALKING:
		move_and_slide(velocity * speed)
	elif currentState == STATES.FOLLOW:
		var playerDirection = Vector2()
		playerDirection = (Global.player.global_position - global_position).normalized()
		move_and_slide(playerDirection * speed / 2)
	pass

func get_damage(val):
	life -= val
	$LifeBar.value = life
	$Anim.play(\"Knock\")
	currentState = STATES.KNOCKED
	if life <= 0:
		queue_free()
		Global.gold += gold
		Global.enemiesKilled += 1
	pass

func state_machine(delta):
	match currentState:
		STATES.ATTACKING:
			attack_wall()
		STATES.WALKING:
			movement(delta)
		STATES.FOLLOW:
			movement(delta)
		STATES.KNOCKED:
			if $KnockTimer.is_stopped():
				$KnockTimer.start()
	pass

func attack_wall():
	if $AttackTimer.is_stopped():
		$AttackTimer.start()
	pass

func _on_AttackArea_body_entered( body ):
	if body.is_in_group(\"Wall\"):
		currentState = STATES.ATTACKING
		wall = body
	if body.is_in_group(\"Player\"):
		body.die()
	pass # replace with function body


func _on_AttackTimer_timeout():
	if wall:
		wall.get_damage(damage)
	pass # replace with function body


func _on_KnockTimer_timeout():
	currentState = STATES.WALKING
	pass # replace with function body
